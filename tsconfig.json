{
  "compilerOptions": {
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": ["es6", "esnext", "es2015", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "../../",
    "declarationDir": "./types",
    "target": "es6",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "graphql": ["node_modules/graphql"]
    }
  },
  "exclude": [
    "node_modules", 
    "./test/**/*.test.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
  "include": ["./**/*.ts", "./**/*.json"],
  "files": ["../../generated-types/type-defs.ts"],
}
